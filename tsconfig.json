    "module": "ESNext",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "target": "es2021",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}